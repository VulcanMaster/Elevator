@model IEnumerable<Elevator.Web.Models.EE.Dictionary.Metric>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MetricFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetricShortName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MetricFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MetricShortName)
        </td>
        <td>
